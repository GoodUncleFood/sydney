{{!< default}}
<main>
  <article class="{{post_class}}">
    {{#post}}
    <header>
      <h1>{{{title}}}</h1>
      <h5>
        <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="dddd, MMMM DD, YYYY"}}</time>
      </h5>
      {{#if tags}}<h5>Posted in {{tags}}</h5>{{/if}}
    </header>
    <section class="posts">
      {{content}}
    </section>
    {{/post}}
    </article>
</main>
